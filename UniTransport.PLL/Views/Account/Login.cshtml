@using UniTransport.BLL.ModelVM.StudentVM
@model StudentLoginVM

@*Login Page - Student View*@

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}

<section>
    <div class="signin">
        <div class="content">
            <h2>Sign In</h2>

            <form class="form" asp-controller="Account" asp-action="Login">

                <div class="inputBox">
                    <label for="login-username">Username</label>
                    <input type="text" id="login-username" name="username" autocomplete="username" required asp-for="UserName">
                </div>

                <div class="inputBox">
                    <label for="login-password">Password</label>
                    <div class="password-container">
                        <input type="password" id="login-password" name="password" autocomplete="current-password" required asp-for="Password">
                        <button type="button" class="toggle-password" data-target="login-password">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="remember-forgot">
                    <label><input type="checkbox" id="login-remember-me" asp-for="RememberMe"> Remember me</label>
                    <a href="#">Forgot Password?</a>
                </div>

                <div class="message" style="display: none;"></div>

                <div class="inputBox">
                    <input type="submit" value="Login" id="login-submit">
                </div>

                <div class="links">
                    <a asp-controller="Account" asp-action="Registration">Sign up</a>
                </div>
            </form>

        </div>

    </div>

</section>

@section Scripts {
    @*  <script src="~/js/log.js"></script> *@
    <script src="~/js/password-toggle.js"></script>
}