@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - UniTransport</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        /* Top Bar Styles */
        .top-bar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background-color: #fff;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            z-index: 1030;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2c3e50;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

        .brand i {
            margin-right: 10px;
            color: #3498db;
        }

        .brand:hover {
            color: #34495e;
            text-decoration: none;
        }

        .search-box {
            position: relative;
            margin: 0 20px;
            flex: 0 0 300px;
        }

        .search-box input {
            width: 100%;
            padding: 8px 15px;
            padding-left: 35px;
            border: 1px solid #ddd;
            border-radius: 20px;
            background-color: #f8f9fa;
        }

        .search-box i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #95a5a6;
        }

        .user-menu {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-menu .user-info {
            text-align: right;
        }

        .user-menu .user-name {
            font-weight: 600;
            color: #2c3e50;
            margin: 0;
        }

        .user-menu .user-role {
            font-size: 0.8rem;
            color: #7f8c8d;
            margin: 0;
        }

        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            top: 60px;
            left: 0;
            bottom: 0;
            width: 250px;
            background-color: #2c3e50;
            padding-top: 20px;
            overflow-y: auto;
            transition: all 0.3s ease;
        }

        .nav-link {
            display: flex;
            align-items: center;
            color: #ecf0f1 !important;
            padding: 12px 20px;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }

        .nav-link i {
            width: 20px;
            margin-right: 10px;
            font-size: 1.1rem;
        }

        .nav-link:hover {
            background-color: #34495e;
            border-left-color: #3498db;
        }

        .nav-link.active-link {
            background-color: #34495e;
            border-left-color: #3498db;
            font-weight: 600;
        }

        /* Content Area */
        .content-area {
            margin-left: 250px;
            margin-top: 60px;
            padding: 20px;
            min-height: calc(100vh - 60px);
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .sidebar {
                width: 60px;
            }

            .nav-link span {
                display: none;
            }

            .content-area {
                margin-left: 60px;
            }

            .search-box {
                display: none;
            }
        }

        /* Card Styles */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 2px 4px rgba(0,0,0,.05);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,.1);
        }

        .card-title {
            color: #2c3e50;
            font-weight: 600;
        }

        /* Table Styles */
        .table {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
        }

        .table thead th {
            background-color: #2c3e50;
            color: #fff;
            font-weight: 500;
            border: none;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        /* Button Styles */
        .btn {
            border-radius: 5px;
            padding: 8px 16px;
            font-weight: 500;
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="d-flex align-items-center">
            <a href="#" class="brand">
                <i class="fas fa-bus"></i>
                UniTransport Admin
            </a>
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" class="form-control" placeholder="Search...">
            </div>
        </div>
        <div class="user-menu">
            <div class="user-info d-none d-md-block">
                <p class="user-name">Admin User</p>
                <p class="user-role">Administrator</p>
            </div>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-sign-out-alt"></i>
                    <span class="d-none d-md-inline ms-1">Logout</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" class="nav-link" data-content="dashboard">
            <i class="fas fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>
        <a href="#" class="nav-link" data-content="users">
            <i class="fas fa-users"></i>
            <span>Users</span>
        </a>
        <a href="#" class="nav-link" data-content="vehicles">
            <i class="fas fa-bus"></i>
            <span>Vehicles</span>
        </a>
        <a href="#" class="nav-link" data-content="schedules">
            <i class="fas fa-calendar"></i>
            <span>Schedules</span>
        </a>
        <a href="#" class="nav-link" data-content="bookings">
            <i class="fas fa-ticket-alt"></i>
            <span>Bookings</span>
        </a>
    </div>

    <!-- Content Area -->
    <div class="content-area">
        <div id="dynamic-content">
            <!-- Content will be loaded here -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function() {
            // Load dashboard content by default
            loadContent('dashboard');

            // Handle navigation clicks
            $('.nav-link').click(function(e) {
                e.preventDefault();
                $('.nav-link').removeClass('active-link');
                $(this).addClass('active-link');

                var content = $(this).data('content');
                loadContent(content);
            });

            function loadContent(content) {
                let url = '';
                switch(content) {
                    case 'dashboard':
                        $('#dynamic-content').html(getDashboardContent());
                        break;
                    case 'users':
                        url = '@Url.Action("Users", "Admin")';
                        break;
                    case 'vehicles':
                        url = '@Url.Action("Vehicles", "Admin")';
                        break;
                    case 'schedules':
                        url = '@Url.Action("Schedules", "Admin")';
                        break;
                    case 'bookings':
                        url = '@Url.Action("Bookings", "Admin")';
                        break;
                }

                if (url) {
                    $('#dynamic-content').load(url);
                }
            }

            function getDashboardContent() {
                return `
                    <div class="container-fluid">
                        <div class="row mb-4">
                            <div class="col-12">
                                <h2 class="mb-4">Welcome to Admin Dashboard</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-users text-primary me-2"></i>
                                            Users
                                        </h5>
                                        <p class="card-text">Manage system users and their roles</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-bus text-success me-2"></i>
                                            Vehicles
                                        </h5>
                                        <p class="card-text">Manage vehicles and their status</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-calendar text-info me-2"></i>
                                            Schedules
                                        </h5>
                                        <p class="card-text">Manage trip schedules and routes</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-ticket-alt text-warning me-2"></i>
                                            Bookings
                                        </h5>
                                        <p class="card-text">View and manage trip bookings</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }

            // Handle search
            let searchTimeout;
            $('.search-box input').on('input', function() {
                clearTimeout(searchTimeout);
                const searchTerm = $(this).val();
                searchTimeout = setTimeout(() => {
                    // Implement search functionality here
                    console.log('Searching for:', searchTerm);
                }, 500);
            });
        });
    </script>
</body>
</html>


