
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/AdminDashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="~/assets/logo.png">
</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <nav class="sidebar">
            <h2>Admin Dashboard</h2>
            <ul>
                <li><a href="#users" class="active"><i class="fas fa-users"></i> Manage Users</a></li>
                <li><a href="#schedules"><i class="fas fa-calendar"></i> Schedules</a></li>
                <li><a href="#buses"><i class="fas fa-bus"></i> Manage Buses</a></li>
                <li><a href="#bookings"><i class="fas fa-ticket"></i> Manage Bookings</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header>
                <div class="header-left">
                    <input type="text" id="searchInput" placeholder="Search~.">
                </div>
                <div class="header-right">
                    <button id="logout-btn">Logout</button>
                </div>
            </header>

            <!-- Content Area -->
            <div class="content-area">
                <div id="dynamic-content">
                    <!-- Dynamic content will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for adding/editing items -->
    <div id="modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="modal-content"></div>
        </div>
    </div>

    @* <script src="~/js/AdminDashboard.js"></script> *@
</body>
</html>

